{
	"name": "@accuser/svelte-kit-hooks",
	"version": "0.1.0",
	"description": "Utility hooks for Svelte Kit applications",
	"keywords": [
		"hooks",
		"svelte kit"
	],
	"homepage": "https://github.com/accuser/svelte-kit-hooks/README.md",
	"bugs": {
		"url": "https://github.com/accuser/svelte-kit-hooks/issues"
	},
	"license": "MIT",
	"author": {
		"name": "Matthew Gibbons",
		"url": "https://github.com/accuser"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/accuser/svelte-kit-hooks.git"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test": "vitest"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@sveltejs/package": "next",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"pino": "^8.6.1",
		"pino-pretty": "^9.1.0",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.7.1",
		"svelte-preprocess": "^4.10.6",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"vite": "^3.1.0",
		"vitest": "^0.23.4"
	},
	"type": "module"
}
